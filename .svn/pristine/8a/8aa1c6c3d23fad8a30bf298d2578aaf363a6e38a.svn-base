	file = {Full Text PDF:C\:\\Users\\hugue\\Zotero\\storage\\JRMW3V8P\\Xu et al. - 2017 - DSRC versus 4G-LTE for Connected Vehicle Applicati.pdf:application/pdf;Snapshot:C\:\\Users\\hugue\\Zotero\\storage\\N5JU8DNT\\2750452.html:text/html},
}

