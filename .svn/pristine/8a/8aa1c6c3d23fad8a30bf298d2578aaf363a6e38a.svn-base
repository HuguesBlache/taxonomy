	pages = {1037--1042},
	file = {IEEE Xplore Full Text PDF:C\:\\Users\\hugue\\Zotero\\storage\\3VP7VP9K\\Anaya et al. - 2014 - Vehicle to pedestrian communications for protectio.pdf:application/pdf;IEEE Xplore Abstract Record:C\:\\Users\\hugue\\Zotero\\storage\\6QAJA4E4\\6856553.html:text/html},
