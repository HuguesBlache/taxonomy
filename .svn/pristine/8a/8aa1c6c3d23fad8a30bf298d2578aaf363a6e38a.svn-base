Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {V2X, VANET, V2V, V2I, autonomous vehicles, dedicated short-range communications, vehicular communications, Bluetooth, intelligent transport system, ultra-wide band, ZigBee},
	pages = {706},
