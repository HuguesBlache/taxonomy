	pages = {64--70},
	file = {IEEE Xplore Full Text PDF:C\:\\Users\\hugue\\Zotero\\storage\\H3Y5UTG5\\Hobert et al. - 2015 - Enhancements of V2X communication in support of co.pdf:application/pdf;IEEE Xplore Abstract Record:C\:\\Users\\hugue\\Zotero\\storage\\24ZYWDED\\7355568.html:text/html},
