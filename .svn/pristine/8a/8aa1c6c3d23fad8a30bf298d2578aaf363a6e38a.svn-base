@article{lee_latency_2017,
	title = {Latency of {Cellular}-{Based} {V2X}: {Perspectives} on {TTI}-{Proportional} {Latency} and {TTI}-{Independent} {Latency}},
	volume = {5},
	issn = {2169-3536},
	shorttitle = {Latency of {Cellular}-{Based} {V2X}},
	doi = {10.1109/ACCESS.2017.2731777},
	abstract = {Vehicle-to-everything (V2X) is a form of wireless communication that is extremely sensitive to latency, because the latency is directly related to driving safety. The V2X systems developed so far have been based on the LTE system. However, the conventional LTE system is not able to support the latency requirements of latency-aware V2X. Fortunately, the state-of-the-art cellular technology standard includes the development of latency reduction schemes, such as shortened transmission time intervals (TTI) and selfcontained subframes. This paper verifies and analyzes the latency of cellular-based V2X with shortened TTI, which is one of the most efficient latency reduction schemes. To verify the feasibility of V2X service, we divide the V2X latency into two types of latency, TTI-independent latency and TTI-proportional latency. Moreover, using system-level simulations considering additional overhead from shortened TTI, we evaluate the latency of cellular-based V2X systems. Based on this feasibility verification, we then propose cellularbased V2X system design principles in terms of shortened TTI with only one OFDM symbol and while sustaining radio resource control connection.},
	journal = {IEEE Access},
	author = {Lee, K. and Kim, J. and Park, Y. and Wang, H. and Hong, D.},
	year = {2017},
	note = {Conference Name: IEEE Access},
	keywords = {cellular radio, Safety, Wireless communication, 3GPP, Automobiles, Cellular networks, cellular technology standard, cellular-based V2X systems, Data communication, latency, latency reduction schemes, latency-aware V2X, Long Term Evolution, LTE system, OFDM modulation, OFDM symbol, radio resource control connection, Roads, self contained subframes, shortened TTI, system analysis and design, telecommunication control, transmission time intervals, TTI-independent latency, TTI-proportional latency, V2X service, vehicle-to-everything, vehicular and wireless technologies, wireless communication},
	pages = {15800--15809},
	file = {IEEE Xplore Full Text PDF:C\:\\Users\\hugue\\Zotero\\storage\\KCE7MHQ3\\Lee et al. - 2017 - Latency of Cellular-Based V2X Perspectives on TTI.pdf:application/pdf;IEEE Xplore Abstract Record:C\:\\Users\\hugue\\Zotero\\storage\\6MHXW7ZY\\7990497.html:text/html},
}

@inproceedings{amjad_low_2018,
	title = {Low {Latency} {V2X} {Applications} and {Network} {Requirements}: {Performance} {Evaluation}},
	shorttitle = {Low {Latency} {V2X} {Applications} and {Network} {Requirements}},
	doi = {10.1109/IVS.2018.8500531},
	abstract = {Vehicle-to-Everything (V2X) communication promises improvements in road safety and efficiency by enabling low-latency and reliable communication services for vehicles. Besides using Mobile Broadband (MBB), there is a need to develop Ultra Reliable Low Latency Communications (URLLC) applications with cellular networks especially when safety-related driving applications are concerned. Future cellular networks are expected to support novel latencysensitive use cases. Many applications of V2X communication, like collaborative autonomous driving requires very low latency and high reliability in order to support real-time communication between vehicles and other network elements. In this paper, we classify V2X use-cases and their requirements in order to identify cellular network technologies able to support them. The bottleneck problem of the medium access in 4G Long Term Evolution(LTE) networks is random access procedure. It is evaluated through simulations to further detail the future limitations and requirements. Limitations and improvement possibilities for next generation of cellular networks are finally detailed. Moreover, the results presented in this paper provide the limits of different parameter sets with regard to the requirements of V2X-based applications. In doing this, a starting point to migrate to Narrowband IoT (NB-IoT) or 5G - solutions is given.},
	booktitle = {2018 {IEEE} {Intelligent} {Vehicles} {Symposium} ({IV})},
	author = {Amjad, Z. and Sikora, A. and Hilt, B. and Lauffenburger, J.},
	year = {2018},
	note = {ISSN: 1931-0587},
	keywords = {cellular radio, Reliability, vehicular ad hoc networks, road safety, Cellular networks, Long Term Evolution, Roads, 4G Long Term Evolution networks, 4G mobile communication, access protocols, Autonomous vehicles, Bandwidth, cellular network technologies, collaborative autonomous driving, future cellular networks, improvement possibilities, Indexes, Low Latency V2X, network elements, performance evaluation, real-time communication, safety-related driving applications, telecommunication network reliability, telecommunication traffic, ultra reliable low latency communications applications, V2X-based applications, vehicle-to-everything communication},
	pages = {220--225},
